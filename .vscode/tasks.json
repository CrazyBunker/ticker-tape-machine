{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Arduino ESP32 Build",
            "type": "shell",
            "command": "arduino-cli compile --fqbn esp32:esp32:esp32 --build-property build.flash_mode=dio --build-property build.flash_size=4MB -v --output-dir ./build ${workspaceFolder}",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Arduino ESP32 Deploy",
            "type": "shell",
            "command": "arduino-cli upload -p 192.168.100.30 --upload-field password=admin --fqbn esp32:esp32:esp32  --build-path ./build --protocol network",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}